<%= form_for([:merchant, @store], html: {class: "form-horizontal form-body"}) do |f| %>

<%= hidden_field_tag :token, params[:token] %>


<div class="form-group">
	<%= f.label :name, "Store Name", class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<span class="input-icon icon-right">
			<%= f.text_field :name, class: "form-control input-bg" %>
			<i class="fa">&#xf1ad;</i>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :logo, class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<span class="btn btn-info btn-file col-sm-4"> <%= f.file_field :logo %> Select Image </span>
		<div class="col-sm-8 upload-file-input-div">
			<span class="input-icon icon-right">
				<input type="text" disabled="disabled" placeholder="selected file..." class="form-control input-bg" id="uploadedFile"/>
				<i class="fa">&#xf03e;</i>
			</span>
		</div>
	</div>
</div>

<div class="form-group">
	<%= f.label :manager_name, class: "col-sm-2 control-label" %>
	<div class="col-sm-2">
		<span class="input-icon icon-right">
			<%= f.text_field :manager_first_name, class: "form-control input-bg", placeholder: "First Name" %>
			<i class="fa">&#xf007;</i>
		</span>
	</div>
	<div class="col-sm-2">
		<span class="input-icon icon-right">
			<%= f.text_field :manager_last_name, class: "form-control input-bg", placeholder: "Last Name" %>
			<i class="fa">&#xf007;</i>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :phone_number, class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<span class="input-icon icon-right">
			<%= f.text_field :phone_number, class: "form-control input-bg" %>
			<i class="fa">&#xf095;</i>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :store_type, class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<%= f.select :store_type , options_for_select([['Physical', 'Physical' ],['Online', 'Online' ],['Both', 'Both' ]], @store.store_type), {}, class: "form-control input-bg" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :site_url, "Website(s)", class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<span class="input-icon icon-right">
			<%= f.text_field :site_url, class: "form-control input-bg", placeholder: "www.example.com" %>
			<i class="fa">&#xf0ac;</i>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :street_number, "Address", class: "col-sm-2 control-label" %>
	<div class="col-sm-8">
		<span class="input-icon icon-right">
			<%= f.text_field :street_number, class: "form-control input-bg", placeholder: "Street Address" %>
			<i class="fa">&#xf041;</i>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :street_number, "&nbsp;".html_safe, class: "col-sm-2 control-label" %>
	<div class="col-sm-2">
		<span class="input-icon icon-right">
			<%= f.text_field :city, class: "form-control input-bg", placeholder: "City" %>
		</span>
	</div>
	<div class="col-sm-2">
		<span class="input-icon icon-right">
			<%= f.text_field :state, class: "form-control input-bg", placeholder: "State" %>
		</span>
	</div>
	<div class="col-sm-2">
		<span class="input-icon icon-right">
			<%= f.text_field :zipcode, class: "form-control input-bg", placeholder: "Zipcode" %>
		</span>
	</div>
	<div class="col-sm-2">
		<span class="input-icon icon-right">
			<%= f.text_field :country, class: "form-control input-bg", placeholder: "Country" %>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :catogories, class: "col-sm-2 control-label" %>
	<div class="col-sm-8">
		<% store_taxon_ids = @store.store_taxons.collect(&:taxon_id) %>
		<% @taxons.each do |taxon| %>
		<div class="col-sm-3">
			<label class="checkbox-inline" title="<%= taxon.name %>"> <%= check_box_tag "store[spree_taxon_ids][]", taxon.id, store_taxon_ids.include?(taxon.id) %>
				<%= truncate(taxon.name, length: 22) %> </label>
		</div>
		<% end %>
	</div>
</div>

<div class="form-group">
	<%= f.label :description, class: "col-sm-2 control-label" %>
	<div class="col-sm-8">
		<span class="input-icon icon-right">
			<%= f.text_area :description, class: "form-control input-bg", placeholder: "Few lines about your store...", rows: 5 %>
			<i class="fa">&#xf022;</i>
		</span>
	</div>
</div>

<div class="form-group">
	<%= f.label :payment_mode, class: "col-sm-2 control-label" %>
	<div class="col-sm-4">
		<%= f.select :payment_mode , options_for_select(STORE_PAYMENT_MODE.invert, @store.payment_mode), {}, class: "form-control input-bg" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :payment_information, class: "col-sm-2 control-label" %>
	<div class="col-sm-8">
		<span class="input-icon icon-right">
			<%= f.text_area :payment_information, class: "form-control input-bg", placeholder: "How would you like to be paid", rows: 2 %>
			<i class="fa">&#xf022;</i>
		</span>
	</div>
</div>



<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit (@store.new_record? ? "Create" : "Update"), class: "btn btn-default btn-primary" %>
	</div>
</div>

<% end %>