<% address_id = address_type.chars.first %>

<div class="inner" data-hook=<%="#{address_type}_inner" %>>
  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}firstname" %>>
    <%= form.text_field :firstname, :class => 'form-control required' ,placeholder: "First Name*" %>
  </div>
  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}lastname" %>>
    <%= form.text_field :lastname, :class => 'form-control required', placeholder: "Last Name*"  %>
  </div>
  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}company" %>>
    <%= form.text_field :company, :class => 'form-control' ,placeholder: "Company" %>
  </div>
  <div class="form-group col-sm-6 col-xs-12" id=<%="#{address_id}address1" %>>
    <%= form.text_field :address1, :class => 'form-control  required' ,placeholder: "Address*"  %>
  </div>
  <div class="form-group col-sm-6 col-xs-12" id=<%="#{address_id}address2" %>>
    <%= form.text_field :address2, :class => 'form-control' , placeholder: "Address2" %>
  </div>
  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}city" %>>
    <%= form.text_field :city, :class => 'form-control required', placeholder: "City*" %>
  </div>
  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}country" %>>
    <span id=<%="#{address_id}country-selection" %>>
      <%= form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'form-control required'} %>
    </span>
  </div>
  <% if Spree::Config[:address_requires_state] %>
    <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}state" %>>
      <% have_states = !address.country.states.empty? %>


      <%== state_elements = [
         form.collection_select(:state_id, address.country.states,
                            :id, :name,
                            {:include_blank => true},
                            {:class => have_states ? 'form-control required' : 'form-control hidden',
                            :disabled => !have_states}) +
         form.text_field(:state_name,
                            :class => !have_states ? 'form-control required' : 'form-control hidden',
                            :disabled => have_states)
         ].join.gsub('"', "'").gsub("\n", "")
      %>
    </div>
      <noscript>
        <%= form.text_field :state_name, :class => 'form-control required' , placeholder: "Select state" %>
      </noscript>
  <% end %>

  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}zipcode" %>>
    <%= form.text_field :zipcode, :class => "form-control #{'required' if address.require_zipcode?}" , placeholder: "Zipcode*" %>
  </div>
  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}phone" %>>
    <%= form.phone_field :phone, :class => "form-control number-only #{'required' if address.require_phone?}" ,placeholder: "Phone*" %>
  </div>
  <div class="form-group col-sm-4 col-xs-12" id=<%="#{address_id}altphone" %>>
    <%= form.phone_field :alternative_phone, :class => 'form-control' , placeholder: "Alternative Phone"%>
  </div>
</div>
