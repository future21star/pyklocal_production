<% address_id = address_type.chars.first %>

<div class="inner" data-hook=<%="#{address_type}_inner" %>>
  <p class="col-sm-6" id=<%="#{address_id}firstname" %>>
    
    <%= form.text_field :firstname, :class => 'form-control required' ,placeholder: "First Name" %>
  </p>
  <p class="col-sm-6" id=<%="#{address_id}lastname" %>>
    
    <%= form.text_field :lastname, :class => 'form-control required', placeholder: "Last Name"  %>
  </p>

  <p class="col-sm-12" id=<%="#{address_id}address1" %>>
    
    <%= form.text_field :address1, :class => 'form-control  required' ,placeholder: "Address1"  %>
  </p>

  <p class="col-sm-6" id=<%="#{address_id}company" %>>
    
    <%= form.text_field :company, :class => 'form-control' ,placeholder: "Company (Optional)" %>
  </p>
  
  
  <p class="col-sm-6" id=<%="#{address_id}address2" %>>
    
    <%= form.text_field :address2, :class => 'form-control' , placeholder: "Address2 (Optional)" %>
  </p>
  <p class="col-sm-4" id=<%="#{address_id}city" %>>
    
    <%= form.text_field :city, :class => 'form-control required', placeholder: "City" %>
  </p>
  <p class="col-sm-4" id=<%="#{address_id}country" %>>
    
    <span id=<%="#{address_id}country-selection" %>>
      <%= form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'form-control required'} %>
    </span>
  </p>

  <% if Spree::Config[:address_requires_state] %>
    <p class="col-sm-4" id=<%="#{address_id}state" %>>
      <% have_states = !address.country.states.empty? %>
      

      <%== state_elements = [
         form.collection_select(:state_id, address.country.states,
                            :id, :name,
                            {:include_blank => true},
                            {:class => have_states ? 'form-control required' : 'form-control hidden',
                            :disabled => !have_states}) +
         form.text_field(:state_name,
                            :class => !have_states ? 'form-control required' : 'form-control hidden',
                            :disabled => have_states)
         ].join.gsub('"', "'").gsub("\n", "")
      %>
    </p>
      <noscript>
        <%= form.text_field :state_name, :class => 'form-control required' , placeholder: "Select state" %>
      </noscript>
  <% end %>


  <p class="col-sm-2" id=<%="#{address_id}zipcode" %>>
    
    <%= form.text_field :zipcode, :class => "form-control #{'required' if address.require_zipcode?}" , placeholder: "ZipCode" %>
  </p>
  <p class="col-sm-5" id=<%="#{address_id}phone" %>>
    
    <%= form.phone_field :phone, :class => "form-control number-only #{'required' if address.require_phone?}" ,placeholder: "Phone" %>
  </p>

  <p class="col-sm-5" id=<%="#{address_id}altphone" %>>
    
    <%= form.phone_field :alternative_phone, :class => 'form-control' , placeholder: "Alternative Phone(Optional)"%>
  </p>
</div>
