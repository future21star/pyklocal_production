<% address_id = address_type.chars.first %>

<div class="inner form-horizontal" data-hook=<%="#{address_type}_inner" %>>
  <div class="form-group  required" id=<%="#{address_id}firstname" %>>
      <%= form.label :firstname, Spree.t(:first_name), class: " col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :firstname, class: 'form-control required' %>
    </div>
  </div>
  <div class="form-group required" id=<%="#{address_id}lastname" %>><br />
    <%= form.label :lastname, Spree.t(:last_name), class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :lastname, :class => 'form-control required ' %>
  </div>
  </div>
  <% if Spree::Config[:company] %>
    <div class="form-group required" id=<%="#{address_id}company" %>>
      <%= form.label :company, Spree.t(:company),class: "col-sm-2 control-label" %><br />
      <div class="col-sm-10">
      <%= form.text_field :company, :class => 'form-control  col-sm-10' %>
      </div>
    </div>
  <% end %>
  <div class="form-group required" id=<%="#{address_id}address1" %>>
    <%= form.label :address1, Spree.t(:street_address),class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= form.text_field :address1, :class => 'form-control  required col-sm-10' %>
    </div>
  </div>
  <div class="form-group required" id=<%="#{address_id}address2" %>>
    <%= form.label :address2, Spree.t(:street_address_2),class: "col-sm-2 control-label" %><br />
    <div class="col-sm-10">
    <%= form.text_field :address2, :class => 'form-control required col-sm-10' %>
    </div>
  </div>
  <div class="form-group required" id=<%="#{address_id}city" %>>
    <%= form.label :city, Spree.t(:city) ,class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
    <%= form.text_field :city, :class => 'form-control required col-sm-10' %>
    </div>
  </div>
  <div class="form-group required" id=<%="#{address_id}country" %>>
    <%= form.label :country_id, Spree.t(:country) ,class: "col-sm-2 control-label"%>
    <span id=<%="#{address_id}country-selection" %>>

      <div class="col-sm-10">
      <%= form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'form-control required'} %>
    </div>
    </span>
  </div>

     <% if Spree::Config[:address_requires_state] %>
    <p class="form-group" id=<%="#{address_id}state" %>>
      <% have_states = !address.country.states.empty? %>
      <%= form.label :state,class: "col-sm-2 control-label" do %>
        <%= Spree.t(:state) %><abbr class='required' title="required" id=<%="#{address_id}state-required"%>>*</abbr>
      <% end %>

      <%== state_elements = [
         form.collection_select(:state_id, address.country.states,
                            :id, :name,
                            {:include_blank => true},
                            {:class => have_states ? 'form-control required' : 'form-control hidden',
                            :disabled => !have_states}) +
         form.text_field(:state_name,
                            :class => !have_states ? 'form-control required' : 'form-control hidden',
                            :disabled => have_states)
         ].join.gsub('"', "'").gsub("\n", "")
      %>
    </p>
      <noscript>
        <%= form.text_field :state_name, :class => 'form-control required' %>
      </noscript>
  <% end %>

  <div class="form-group required" id=<%="#{address_id}zipcode" %>>
    <%= form.label :zipcode, Spree.t(:zip) ,class: "col-sm-2 control-label"%><% if address.require_zipcode? %><% end %>
    <div class="col-sm-10">
    <%= form.text_field :zipcode, :class => "form-control col-sm-10 #{'required' if address.require_zipcode?}" %>
     </div>
  </div>
  <div class="form-group required" id=<%="#{address_id}phone" %>>
    <%= form.label :phone, Spree.t(:phone),class: "col-sm-2 control-label" %><% if address.require_phone? %><% end %>
    <div class="col-sm-10">
    <%= form.phone_field :phone, :class => "form-control col-sm-10 #{'required' if address.require_phone?}" %>
     </div>
  </div>
  <% if Spree::Config[:alternative_shipping_phone] %>
    <div class="form-group required" id=<%="#{address_id}altphone" %>>
      <%= form.label :alternative_phone, Spree.t(:alternative_phone),class: "col-sm-2 control-label" %><br />
      <div class="col-sm-10">
      <%= form.phone_field :alternative_phone, :class => 'form-control col-sm-10' %>
       </div>
    </div>
  <% end %>
</div>
