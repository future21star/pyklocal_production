- unless filters.blank?
  - filters.each do |filter|
    - if params[:q][:"#{filter}"]
      - if "#{filter}" == "price"
        = hidden_field_tag "q[price][]", params[:q][:price]
      - if "#{filter}" == "brand"
        = hidden_field_tag "q[brand][]", params[:q][:brand]
      - if "#{filter}" == "store"
        = hidden_field_tag "q[store][]", params[:q][:store]
      - if "#{filter}" == "categories"
        = hidden_field_tag "q[categories][]", params[:q][:categories]
      - else
        = hidden_field_tag "q[#{filter}]", params[:q][:"#{filter}"]