  <%= form_for @addresses do |form| %> 
    <%= form.hidden_field :user_id , :value => current_spree_user.try(:id), :class => 'form-control' %>
    <p class="form-group" id=<%="#{@addresses}firstname" %>>
        <%= form.label :firstname do %>
          <%= Spree.t(:first_name) %><abbr class="required" title="required">*</abbr>
        <% end %>
        <%= form.text_field :firstname, :class => 'form-control required' %>
      </p>
      <p class="form-group" id=<%="#{@addresses}lastname" %>>
        <%= form.label :lastname do %>
          <%= Spree.t(:last_name) %><abbr class="required" title="required">*</abbr>
        <% end %>
        <%= form.text_field :lastname, :class => 'form-control required' %>
      </p>
      <% if Spree::Config[:company] %>
        <p class="form-group" id=<%="#{@addresses}company" %>>
          <%= form.label :company, Spree.t(:company) %>
          <%= form.text_field :company, :class => 'form-control' %>
        </p>
      <% end %>
      <p class="form-group" id=<%="#{@addresses}address1" %>>
        <%= form.label :address1 do %>
          <%= Spree.t(:street_address) %><abbr class="required" title="required">*</abbr>
        <% end %>
        <%= form.text_field :address1, :class => 'form-control  required' %>
      </p>
      <p class="form-group" id=<%="#{@addresses}address2" %>>
        <%= form.label :address2, Spree.t(:street_address_2) %>
        <%= form.text_field :address2, :class => 'form-control' %>
      </p>
      <p class="form-group" id=<%="#{@addresses}city" %>>
        <%= form.label :city do %>
          <%= Spree.t(:city) %><abbr class="required" title="required">*</abbr>
        <% end %>
        <%= form.text_field :city, :class => 'form-control required' %>
      </p>
      <p class="form-group" id=<%="#{@addresses}country" %>>
        <%= form.label :country_id do %>
          <%= Spree.t(:country) %><abbr class="required" title="required">*</abbr>
        <% end %>
        <span id=<%="#{@addresses}country-selection" %>>
          <%= form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'form-control required'} %>
        </span>
      </p>

      <% if Spree::Config[:address_requires_state] %>
        <p class="form-group" id=<%="#{@addresses}state" %>>
          <% have_states = !@addresses.country.states.empty? %>
          <%= form.label :state do %>
            <%= Spree.t(:state) %><abbr class='required' title="required" id=<%="#{@addresses}state-required"%>>*</abbr>
          <% end %>

          <%== state_elements = [
             form.collection_select(:state_id, @addresses.country.states,
                                :id, :name,
                                {:include_blank => true},
                                {:class => have_states ? 'form-control required' : 'form-control hidden',
                                :disabled => !have_states}) +
             form.text_field(:state_name,
                                :class => !have_states ? 'form-control required' : 'form-control hidden',
                                :disabled => have_states)
             ].join.gsub('"', "'").gsub("\n", "")
          %>
        </p>
          <noscript>
            <%= form.text_field :state_name, :class => 'form-control required' %>
          </noscript>
      <% end %>

      <p class="form-group" id=<%="#{@addresses}zipcode" %>>
        <%= form.label :zipcode do %>
          <%= Spree.t(:zip) %><% if @addresses.require_zipcode? %><abbr class="required" title="required">*</abbr><% end %>
        <% end %>
        <%= form.text_field :zipcode, :class => "form-control #{'required' if @addresses.require_zipcode?}" %>
      </p>
      <p class="form-group" id=<%="#{@addresses}phone" %>>
        <%= form.label :phone do %>
          <%= Spree.t(:phone) %><% if @addresses.require_phone? %><abbr class="required" title="required">*</abbr><% end %>
        <% end %>
        <%= form.phone_field :phone, :class => "form-control #{'required' if @addresses.require_phone?}" %>
      </p>
      <% if Spree::Config[:alternative_shipping_phone] %>
        <p class="form-group" id=<%="#{@addresses}altphone" %>>
          <%= form.label :alternative_phone, Spree.t(:alternative_phone) %>
          <%= form.phone_field :alternative_phone, :class => 'form-control' %>
        </p>
      <% end %>
      <%= form.submit %>
    <% end %>